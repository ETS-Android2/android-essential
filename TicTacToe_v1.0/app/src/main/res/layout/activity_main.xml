<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewPlayerName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewPoints1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPlayerName1"
        android:layout_alignParentLeft="true"
        android:text="0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewPlayerName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewPoints2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPlayerName2"
        android:layout_alignParentRight="true"
        android:text="0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/victoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/GridLayoutId"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="@string/empty_text"
        android:textSize="30sp" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/GridLayoutId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:columnCount="3">

        <Button
            android:id="@+id/button00"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="onClick"
            android:tag="00"
            android:text="@string/empty_text"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button01"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="onClick"
            android:tag="01"
            android:text="@string/empty_text"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button02"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="onClick"
            android:tag="02"
            android:text="@string/empty_text"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="onClick"
            android:tag="10"
            android:text="@string/empty_text"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="onClick"
            android:tag="11"
            android:text="@string/empty_text"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="onClick"
            android:tag="12"
            android:text="@string/empty_text"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button20"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="onClick"
            android:tag="20"
            android:text="@string/empty_text"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button21"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="onClick"
            android:tag="21"
            android:text="@string/empty_text"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button22"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="onClick"
            android:tag="22"
            android:text="@string/empty_text"
            android:textSize="24sp" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/button_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GridLayoutId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="restartGame"
        android:text="@string/restart"
        android:visibility="invisible" />

</RelativeLayout>

